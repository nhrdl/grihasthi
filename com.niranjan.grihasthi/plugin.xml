<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.niranjan.grihasthi.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.niranjan.grihasthi.Perspective"
            id="com.niranjan.grihasthi.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Message"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="com.niranjan.grihasthi.View"
            id="com.niranjan.grihasthi.view">
      </view>
      <view
            name="Mailboxes"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="com.niranjan.grihasthi.NavigationView"
            id="com.niranjan.grihasthi.navigationView">
      </view>
      <view
            allowMultiple="true"
            class="com.niranjan.grihasthi.location.LocationEditorView"
            icon="icons/mail.ico"
            id="com.niranjan.grihasthi.location.LocationEditorView"
            name="Location View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="com.niranjan.grihasthi.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="com.niranjan.grihasthi.category"
            id="com.niranjan.grihasthi.open">
      </command>
      <command
            name="Open Message Dialog"
            description="Open a message dialog"
            categoryId="com.niranjan.grihasthi.category"
            id="com.niranjan.grihasthi.openMessage">
      </command>
      <command
            defaultHandler="com.niranjan.grihasthi.location.LocationEditorViewHandler"
            description="Opens a location"
            id="com.niranjan.grihasthi.location.LocationEditorView"
            name="Open location">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.niranjan.grihasthi.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+2">
      </key>
      <key
            commandId="com.niranjan.grihasthi.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+3">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.niranjan.grihasthi.application"
            name="RCP Product">
         <property
               name="aboutText"
               value="RCP Mail template created by PDE">
         </property>
         <property
               name="windowImages"
               value="icons/sample2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
         <property
               name="appName"
               value="RCP Product">
         </property>
      </product>
   </extension>
   <extension 
   		point="org.eclipse.ui.intro">
        <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="com.niranjan.grihasthi.intro">
      </intro>
      <introProductBinding
            introId="com.niranjan.grihasthi.intro"
            productId="com.niranjan.grihasthi.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="com.niranjan.grihasthi.intro"
            content="introContent.xml"
            id="com.niranjan.grihasthi.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
 <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            content="introext.xml"
            configId="com.niranjan.grihasthi.configId">
      </configExtension>
   </extension>
 <extension
       point="org.eclipse.ui.editors">
    <editor
          class="com.niranjan.grihasthi.location.LocationEditorView"
          default="false"
          id="com.niranjan.grihasthi.location.LocationEditorView"
          name="LocationEditorView">
    </editor>
 </extension>
</plugin>
